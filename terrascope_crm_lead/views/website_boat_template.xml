<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="terrascope_concept_boat" name="Concept Boat" inherit_id="terrascope_crm_lead.terrascope_crm_contactus_form" customize_show="True">
        <xpath expr="//select[@name='product_id']" position="replace">

            <select id="product_id" class="form-control" name="product_id" required="1" readonly="1">
                <t t-foreach="product_id" t-as="product_id">
                    <option t-attf-value="#{product_id.id}"><t t-esc="product_id.name"/></option>
                </t>
            </select>

        </xpath>
    </template>

